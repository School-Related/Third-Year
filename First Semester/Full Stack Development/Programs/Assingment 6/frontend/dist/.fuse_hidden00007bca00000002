		<script src="https://cdn.jsdelivr.net/npm/axios/dist/axios.min.js"></script>
		<script>const apiUrl = "http://localhost:3000";
function displayResult(result) {
    const books = result;
    const bookList = document.getElementById("book-list");
    bookList.innerHTML = "";
    books.forEach((book)=>{
        const row = document.createElement("tr");
        row.innerHTML = `
      <td class="border px-4 py-2">${book.title}</td>
      <td class="border px-4 py-2">${book.author}</td>
      <td class="border px-4 py-2">${book.genre}</td>
      <td class="border px-4 py-2">${book.price}</td>
    `;
        bookList.appendChild(row);
    });
}
function listAllBooks() {
    // Use Axios to make a GET request to list all books
    axios.get(apiUrl + "/books").then((response)=>{
        console.log(response);
        displayResult(response.data);
    }).catch((error)=>{
        console.log(error);
        alert("some error occured");
    });
}
function getBookById() {
    const bookId = document.getElementById("bookId").value;
    if (!bookId) {
        displayResult("Please enter a valid Book ID.");
        return;
    }
    // Use Axios to make a GET request to get a book by ID
    axios.get(apiUrl + `/books/${bookId}`).then((response)=>{
        displayResult(JSON.stringify(response.data, null, 2));
    }).catch((error)=>{
        displayResult("Error: " + error.message);
    });
}
