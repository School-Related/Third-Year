function showbooks(results) {
    const books = results;
    const container_div = document.getElementById("maincontainer");
    books.forEach((book)=>{
        const div = document.createElement("div");
        div.className = "flex flex-col justify-center items-center";
        div.innerHTML = `
            <div class="flex flex-col justify-center items-center bg-white p-4 rounded-2xl">
              <img
                class="h-64 w-64 object-cover rounded-lg shadow-md"
                src="${book.image}"
                alt="book"
              />
              <div class="mt-4 flex flex-col gap-1 items-start justify-center w-full px">
                <h1 class="text-xl font-semibold text-gray-700 dark:text-white">
                  ${book.title}
                </h1>
                <div class="flex justify-between w-full">
                  <p class="mt-2 text-gray-600 dark:text-gray-300">
                    ${book.author}
                  </p>
                  <p class="mt-2 text-gray-600 dark:text-gray-300 flex justify-center items-center">
                    <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24"><path fill="currentColor" d="M13.725 21L7 14v-2h3.5q1.325 0 2.288-.863T13.95 9H6V7h7.65q-.425-.875-1.263-1.438T10.5 5H6V3h12v2h-3.25q.35.425.625.925T15.8 7H18v2h-2.025q-.2 2.125-1.75 3.563T10.5 14h-.725l6.725 7h-2.775Z"/></svg> ${book.price}
                  </p>
                </div>
              </div>
            </div>
            `;
        container_div.appendChild(div);
    });
}
function displayResult(result) {
    const books = results;
    const container_div = document.getElementById("book-list");
    bookList.innerHTML = "";
    books.forEach((book)=>{});
}
function listAllBooks() {
    // Use Axios to make a GET request to list all books
    axios.get(apiUrl + "/books").then((response)=>{
        console.log(response);
        displayResult(response.data);
    }).catch((error)=>{
        console.log(error);
        alert("some error occured");
    });
}
function getBookById() {
    const bookId = document.getElementById("bookId").value;
    if (!bookId) {
        displayResult("Please enter a valid Book ID.");
        return;
    }
    // Use Axios to make a GET request to get a book by ID
    axios.get(apiUrl + `/books/${bookId}`).then((response)=>{
        displayResult(JSON.stringify(response.data, null, 2));
    }).catch((error)=>{
        displayResult("Error: " + error.message);
    });
}
